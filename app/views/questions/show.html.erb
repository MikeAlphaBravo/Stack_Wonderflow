<h1><%= @question.title %></h1>
<h4><%= @question.text %></h4>
<h5><%= @question.rating %></h5>

<% if @question.answers.any? %>
  <ul>
    <% @question.answers.each do |answer| %>
      <li>
        <%= answer.text %>
        <%= answer.rating %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no answers yet!</p>
<% end %>
