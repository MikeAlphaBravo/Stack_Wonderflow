<!DOCTYPE html>
<html>
  <head>
    <title>StackWonderflow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
    <a class="navbar-brand" href="/">StackWonderflow</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Questions", questions_path, :class => "nav-link" %>
        </li>
      </ul>

      <% if current_user %>
        <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
      <% else %>
        <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
      <% end %>

      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <%= form_tag(questions_path, :method => "get", :class => "form-inline") do %>
        <%= text_field_tag :search, params[:search], :placeholder => "Search", :class => "form-control mr-sm-2"%>
        <%= submit_tag "Search", :name => nil, :class => "btn btn-primary" %>
      <% end %>
    </div>
  </nav>

  <div class="card">
    <%= flash[:alert] %>
    <%= flash[:notice] %>
  </div>

  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
